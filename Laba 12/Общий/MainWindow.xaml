<Window x:Class="PresentationTier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding НаименованиеМагазина}" Height="400" Width="800"
        WindowStartupLocation="CenterScreen" Background="LightCyan">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Сетка для информации о выбранном товаре -->
        <Grid Grid.Row="0" Name="GridForTovar"
              DataContext="{Binding ElementName=MainList, Path=SelectedItem}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Margin="5" Grid.Row="0" Grid.Column="0" Text="Код:"/>
            <TextBox Margin="5" Grid.Row="0" Grid.Column="1" Text="{Binding КодТовара}"/>

            <TextBlock Margin="5" Grid.Row="1" Grid.Column="0" Text="Наименование:"/>
            <TextBox Margin="5" Grid.Row="1" Grid.Column="1" Text="{Binding НаименованиеТовара}"/>

            <TextBlock Margin="5" Grid.Row="2" Grid.Column="0" Text="Цена:"/>
            <TextBox Margin="5" Grid.Row="2" Grid.Column="1" Text="{Binding ЦенаТовара}"/>

            <TextBlock Margin="5" Grid.Row="3" Grid.Column="0" Text="Количество:"/>
            <TextBox Margin="5" Grid.Row="3" Grid.Column="1" Text="{Binding КоличествоТовара}"/>

            <TextBlock Margin="5" Grid.Row="4" Grid.Column="0" Text="Описание:"/>
            <TextBox Margin="5" Grid.Row="4" Grid.Column="1" Text="{Binding ОписаниеТовара}"/>

            <TextBlock Margin="5" Grid.Row="5" Grid.Column="0" Text="Всего по товару:"/>
            <TextBox Margin="5" Grid.Row="5" Grid.Column="1" Text="{Binding СуммарнаяСтоимостьПозиции, Mode=OneWay}"/>
        </Grid>

        <!-- Список товаров -->
        <Grid Grid.Row="1" Name="GridForCollections">
            <ListBox Name="MainList" ItemsSource="{Binding СписокТоваров, Mode=OneWay}"
                     DisplayMemberPath="ПредставлениеТовара" Background="Azure"
                     Margin="10"/>
        </Grid>

        <!-- Итоговая информация -->
        <Grid Grid.Row="2" Name="GridForItog">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="5" Text="Суммарная стоимость:" Grid.Column="0" HorizontalAlignment="Right"/>
            <TextBox Margin="5" Grid.Column="1" Text="{Binding СуммарнаяСтоимость, Mode=OneWay}"/>
            <TextBlock Margin="5" Text="Всего товаров:" Grid.Column="2" HorizontalAlignment="Right"/>
            <TextBox Margin="5" Grid.Column="3" Text="{Binding СуммарноеКоличество, Mode=OneWay}"/>
        </Grid>
    </Grid>
</Window>