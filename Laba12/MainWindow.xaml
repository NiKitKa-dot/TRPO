<Window x:Class="PresentationTier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding НазваниеАгентства}" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="LightCyan">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Список строений -->
        <ListBox Grid.Row="0" Name="MainList" 
                 ItemsSource="{Binding СписокСтроений}" 
                 DisplayMemberPath="Представление"
                 Background="White" BorderThickness="1" BorderBrush="Gray"
                 Margin="0,0,0,10"
                 SelectionChanged="MainList_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF0078D7"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Результаты -->
        <StackPanel Grid.Row="1" Background="White" Margin="10">
            <TextBlock Text="Результаты расчетов:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Объект с максимальной стоимостью квадратного метра:" 
                          FontWeight="SemiBold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                          Text="{Binding ОбъектСМаксСтоимостьюКвадрата.Представление}"
                          Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Средняя стоимость квадратного метра (квартиры):" 
                          FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                          Text="{Binding СредняяСтоимостьКвадратаКвартир, StringFormat={}{0:N2} ₽/м²}"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>